{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["ES2020", "DOM"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "emitDeclarationOnly": false,
        "outDir": "dist",
        "declarationDir": "dist/types",
        "jsx": "react-jsx",
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src"]
}
